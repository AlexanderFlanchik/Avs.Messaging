<html lang="">
    <head>
        <title>Messaging Consumer</title>
        <link href="styles.css" rel="stylesheet" type="text/css">
        <script src="htmx.min.js" type="text/javascript"></script>
        <script src="htmx-ext-sse@2.2.2.js" type="text/javascript"></script>
    </head>
    <body>
        <div class="wrapper">
            <div class="title">
                <span>Messaging Consumer is running. Waiting for messages...</span>
            </div>
            <div class="messages-container">
                <table class="tbl-messages">
                    <thead>
                    <tr>
                        <th class="id-column">User ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Login</th>
                        <th>Email</th>
                    </tr>
                    </thead>
                    <tbody hx-ext="sse" sse-connect="/new-users/@_instanceId" sse-swap="message" hx-swap="beforeend">
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>

@code {
    Guid _instanceId = Guid.NewGuid();
}